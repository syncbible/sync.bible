{
	"manifest_version": 20,
	"name": "sync.bible",
	"short_name": "sync.bible",
	"version": "20",

	"description": "A JavaScript bible exploration app",
	"icons": [
		{
            "src": "syncbible.svg",
            "purpose": "any",
            "sizes": "any"
		}
	],
	"app": {
		"urls": [
			"https://sync.bible/"
		],
		"launch": {
			"web_url": "https://sync.bible/"
		}
	},

	"start_url": "/index.html",
	"display": "standalone",
	"background_color": "#ffffff",
	"theme_color": "#ffffff",

	"author": "scruffian",
	"permissions": {
		"unlimitedStorage": true
	}
}
